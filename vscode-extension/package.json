{
  "name": "mcp-ai-prompts",
  "displayName": "MCP AI Prompts",
  "description": "Manage and organize your AI prompts with cloud storage support (OneDrive, Google Drive, Dropbox)",
  "version": "1.1.1",
  "publisher": "GleidsonFerSanP",
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/GleidsonFerSanP/mcp-ai-prompts-management.git"
  },
  "bugs": {
    "url": "https://github.com/GleidsonFerSanP/mcp-ai-prompts-management/issues"
  },
  "homepage": "https://github.com/GleidsonFerSanP/mcp-ai-prompts-management#readme",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Snippets",
    "Other"
  ],
  "keywords": [
    "ai",
    "prompts",
    "mcp",
    "claude",
    "chatgpt",
    "copilot",
    "snippets",
    "cloud-storage",
    "productivity"
  ],
  "activationEvents": [
    "onView:aiPromptsExplorer",
    "onCommand:aiPrompts.addPrompt",
    "onCommand:aiPrompts.refreshPrompts",
    "onCommand:aiPrompts.configureStorage",
    "onCommand:aiPrompts.searchPrompts",
    "onChatParticipant:mcp-ai-prompts.prompts",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "mcpServerDefinitionProviders": [
      {
        "id": "mcp-ai-prompts",
        "label": "MCP AI Prompts"
      }
    ],
    "languageModelTools": [
      {
        "name": "mcp-ai-prompts_listPrompts",
        "displayName": "List My AI Prompts",
        "description": "List all prompts from the user's personal AI prompt library. Use this tool when the user asks to: show prompts, list prompts, see my prompts, what prompts do I have, show my prompt collection, browse prompts, view all prompts, show prompt library. Can filter by category or search term.",
        "tags": [
          "prompts",
          "ai",
          "list",
          "show",
          "browse",
          "collection",
          "library",
          "view"
        ],
        "canBeReferencedInPrompt": true,
        "inputSchema": {
          "type": "object",
          "properties": {
            "category": {
              "type": "string",
              "description": "Filter prompts by category name (e.g., Code, Writing, Analysis)"
            },
            "search": {
              "type": "string",
              "description": "Search term to filter prompts by name or description"
            }
          }
        }
      },
      {
        "name": "mcp-ai-prompts_getPrompt",
        "displayName": "Get Prompt Content",
        "description": "Retrieve the full content of a specific prompt from the user's library. Use this when the user asks to: get a prompt, show prompt content, use this prompt, retrieve prompt, fetch prompt, open prompt, load prompt, read prompt. Can find by ID or name.",
        "tags": [
          "prompts",
          "ai",
          "get",
          "retrieve",
          "fetch",
          "read",
          "load",
          "open",
          "use"
        ],
        "canBeReferencedInPrompt": true,
        "inputSchema": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "description": "The unique ID of the prompt"
            },
            "name": {
              "type": "string",
              "description": "The name of the prompt (partial match supported)"
            }
          }
        }
      },
      {
        "name": "mcp-ai-prompts_searchPrompts",
        "displayName": "Search My Prompts",
        "description": "Search through the user's AI prompt library by keyword. Use when user asks to: find a prompt, search prompts, look for prompt, find prompt about X, do I have a prompt for X, search my prompts. Searches in name, description, content, category and tags.",
        "tags": [
          "prompts",
          "ai",
          "search",
          "find",
          "lookup",
          "query",
          "discover"
        ],
        "canBeReferencedInPrompt": true,
        "inputSchema": {
          "type": "object",
          "properties": {
            "query": {
              "type": "string",
              "description": "The search query - can be keywords, topic, or description"
            }
          },
          "required": [
            "query"
          ]
        }
      },
      {
        "name": "mcp-ai-prompts_getCategories",
        "displayName": "Get Prompt Categories",
        "description": "Get all categories used in the user's prompt library. Use when user asks: what categories exist, show categories, list prompt categories, how are my prompts organized, what types of prompts do I have.",
        "tags": [
          "prompts",
          "ai",
          "categories",
          "organization",
          "types"
        ],
        "canBeReferencedInPrompt": true,
        "inputSchema": {
          "type": "object",
          "properties": {}
        }
      },
      {
        "name": "mcp-ai-prompts_getTags",
        "displayName": "Get Prompt Tags",
        "description": "Get all tags used in the user's prompt library. Use when user asks: what tags exist, show tags, list prompt tags, what labels do my prompts have.",
        "tags": [
          "prompts",
          "ai",
          "tags",
          "labels"
        ],
        "canBeReferencedInPrompt": true,
        "inputSchema": {
          "type": "object",
          "properties": {}
        }
      },
      {
        "name": "mcp-ai-prompts_addPrompt",
        "displayName": "Save Prompt to Library",
        "description": "Save a new prompt to the user's personal AI prompt library. IMPORTANT: Use this tool when the user asks to: save this prompt, store this prompt, add to my prompts, save to library, keep this prompt, remember this prompt, add this to my collection, save that as a prompt, criar prompt, salvar prompt, guardar prompt. This is the primary tool for persisting prompts.",
        "tags": [
          "prompts",
          "ai",
          "add",
          "save",
          "store",
          "create",
          "new",
          "persist",
          "keep",
          "remember"
        ],
        "canBeReferencedInPrompt": true,
        "inputSchema": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "The name for the prompt - should be descriptive and memorable"
            },
            "description": {
              "type": "string",
              "description": "Brief description of what the prompt does and when to use it"
            },
            "category": {
              "type": "string",
              "description": "Category to organize the prompt (e.g., Code, Writing, Analysis, Creative, Business)"
            },
            "tags": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Tags for easier discovery and organization"
            },
            "content": {
              "type": "string",
              "description": "The full prompt content/text to be saved"
            }
          },
          "required": [
            "name",
            "content"
          ]
        }
      },
      {
        "name": "mcp-ai-prompts_updatePrompt",
        "displayName": "Update Existing Prompt",
        "description": "Update an existing prompt in the user's library. Use when user asks to: update this prompt, edit prompt, modify prompt, change prompt, improve prompt and save, fix this prompt, rename prompt, change category, update tags, alterar prompt, editar prompt, melhorar prompt e salvar.",
        "tags": [
          "prompts",
          "ai",
          "update",
          "edit",
          "modify",
          "change",
          "improve",
          "fix",
          "rename"
        ],
        "canBeReferencedInPrompt": true,
        "inputSchema": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "description": "The unique ID of the prompt to update"
            },
            "name": {
              "type": "string",
              "description": "Current name of the prompt (used to find it if ID not provided)"
            },
            "newName": {
              "type": "string",
              "description": "New name for the prompt"
            },
            "description": {
              "type": "string",
              "description": "New description for the prompt"
            },
            "category": {
              "type": "string",
              "description": "New category for the prompt"
            },
            "tags": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "New tags for the prompt"
            },
            "content": {
              "type": "string",
              "description": "New/updated prompt content"
            }
          }
        }
      },
      {
        "name": "mcp-ai-prompts_deletePrompt",
        "displayName": "Delete Prompt",
        "description": "Delete a prompt from the user's library permanently. Use when user asks to: delete prompt, remove prompt, delete this from my library, remove from prompts, excluir prompt, remover prompt, apagar prompt.",
        "tags": [
          "prompts",
          "ai",
          "delete",
          "remove",
          "erase"
        ],
        "canBeReferencedInPrompt": true,
        "inputSchema": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "description": "The unique ID of the prompt to delete"
            },
            "name": {
              "type": "string",
              "description": "The name of the prompt to delete (used if ID not provided)"
            }
          }
        }
      },
      {
        "name": "mcp-ai-prompts_improvePrompt",
        "displayName": "Improve and Analyze Prompt",
        "description": "Analyze a prompt and suggest improvements using prompt engineering best practices. Use when user asks to: improve this prompt, make this prompt better, optimize prompt, enhance prompt, review prompt quality, analyze prompt, suggest improvements for prompt, melhorar esse prompt, otimizar prompt.",
        "tags": [
          "prompts",
          "ai",
          "improve",
          "optimize",
          "enhance",
          "analyze",
          "review",
          "better"
        ],
        "canBeReferencedInPrompt": true,
        "inputSchema": {
          "type": "object",
          "properties": {
            "promptContent": {
              "type": "string",
              "description": "The prompt content to analyze and improve"
            },
            "promptName": {
              "type": "string",
              "description": "Name of existing prompt to improve (will fetch from library)"
            },
            "focus": {
              "type": "string",
              "description": "Specific aspect to focus on: clarity, specificity, structure, examples, constraints"
            }
          }
        }
      }
    ],
    "chatParticipants": [
      {
        "id": "mcp-ai-prompts.prompts",
        "fullName": "AI Prompts Manager",
        "name": "prompts",
        "description": "Manage and use your AI prompt library",
        "isSticky": false,
        "commands": [
          {
            "name": "list",
            "description": "List all your prompts"
          },
          {
            "name": "search",
            "description": "Search prompts by name, description, or tags"
          },
          {
            "name": "use",
            "description": "Get a specific prompt by name"
          },
          {
            "name": "suggest",
            "description": "Get prompt suggestions for your task"
          },
          {
            "name": "save",
            "description": "Save a new prompt to your library"
          }
        ]
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aiPrompts",
          "title": "AI Prompts",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "aiPrompts": [
        {
          "id": "aiPromptsExplorer",
          "name": "Prompts Library"
        }
      ]
    },
    "commands": [
      {
        "command": "aiPrompts.addPrompt",
        "title": "Add New Prompt",
        "category": "AI Prompts",
        "icon": "$(add)"
      },
      {
        "command": "aiPrompts.viewPrompt",
        "title": "View Prompt",
        "category": "AI Prompts",
        "icon": "$(eye)"
      },
      {
        "command": "aiPrompts.editPrompt",
        "title": "Edit Prompt",
        "category": "AI Prompts",
        "icon": "$(edit)"
      },
      {
        "command": "aiPrompts.deletePrompt",
        "title": "Delete Prompt",
        "category": "AI Prompts",
        "icon": "$(trash)"
      },
      {
        "command": "aiPrompts.copyPrompt",
        "title": "Copy to Clipboard",
        "category": "AI Prompts",
        "icon": "$(copy)"
      },
      {
        "command": "aiPrompts.copyPromptContent",
        "title": "Copy Prompt Content",
        "category": "AI Prompts"
      },
      {
        "command": "aiPrompts.insertPrompt",
        "title": "Insert at Cursor",
        "category": "AI Prompts",
        "icon": "$(insert)"
      },
      {
        "command": "aiPrompts.refreshPrompts",
        "title": "Refresh Prompts",
        "category": "AI Prompts",
        "icon": "$(refresh)"
      },
      {
        "command": "aiPrompts.configureStorage",
        "title": "Configure Storage",
        "category": "AI Prompts",
        "icon": "$(cloud)"
      },
      {
        "command": "aiPrompts.searchPrompts",
        "title": "Search Prompts",
        "category": "AI Prompts",
        "icon": "$(search)"
      },
      {
        "command": "aiPrompts.showStats",
        "title": "Show Statistics",
        "category": "AI Prompts",
        "icon": "$(graph)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "aiPrompts.addPrompt",
          "when": "view == aiPromptsExplorer",
          "group": "navigation@1"
        },
        {
          "command": "aiPrompts.refreshPrompts",
          "when": "view == aiPromptsExplorer",
          "group": "navigation@2"
        },
        {
          "command": "aiPrompts.configureStorage",
          "when": "view == aiPromptsExplorer",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "aiPrompts.viewPrompt",
          "when": "view == aiPromptsExplorer && viewItem == prompt",
          "group": "inline@1"
        },
        {
          "command": "aiPrompts.copyPrompt",
          "when": "view == aiPromptsExplorer && viewItem == prompt",
          "group": "inline@2"
        },
        {
          "command": "aiPrompts.insertPrompt",
          "when": "view == aiPromptsExplorer && viewItem == prompt",
          "group": "inline@3"
        },
        {
          "command": "aiPrompts.viewPrompt",
          "when": "view == aiPromptsExplorer && viewItem == prompt",
          "group": "1_actions@1"
        },
        {
          "command": "aiPrompts.editPrompt",
          "when": "view == aiPromptsExplorer && viewItem == prompt",
          "group": "1_actions@2"
        },
        {
          "command": "aiPrompts.deletePrompt",
          "when": "view == aiPromptsExplorer && viewItem == prompt",
          "group": "2_danger@1"
        }
      ],
      "commandPalette": [
        {
          "command": "aiPrompts.editPrompt",
          "when": "false"
        },
        {
          "command": "aiPrompts.deletePrompt",
          "when": "false"
        },
        {
          "command": "aiPrompts.copyPrompt",
          "when": "false"
        },
        {
          "command": "aiPrompts.insertPrompt",
          "when": "false"
        }
      ]
    },
    "configuration": {
      "title": "AI Prompts",
      "properties": {
        "aiPrompts.storage.provider": {
          "type": "string",
          "enum": [
            "local",
            "onedrive",
            "googledrive",
            "dropbox"
          ],
          "default": "local",
          "description": "Storage provider for AI prompts",
          "enumDescriptions": [
            "Local file storage (default)",
            "OneDrive cloud storage",
            "Google Drive cloud storage",
            "Dropbox cloud storage"
          ]
        },
        "aiPrompts.storage.path": {
          "type": "string",
          "default": "",
          "description": "Custom storage path (leave empty for auto-detection)"
        },
        "aiPrompts.mcpServerPath": {
          "type": "string",
          "default": "",
          "description": "Custom path to MCP server index.js (leave empty for auto-detection)"
        },
        "aiPrompts.defaultCategory": {
          "type": "string",
          "default": "development",
          "description": "Default category for new prompts"
        },
        "aiPrompts.snippetPrefix": {
          "type": "string",
          "default": "prompt-",
          "description": "Prefix for prompt snippets autocomplete"
        },
        "aiPrompts.showCategoryIcons": {
          "type": "boolean",
          "default": true,
          "description": "Show category icons in tree view"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --production && npm run esbuild-server",
    "esbuild-base": "node esbuild.js",
    "esbuild-server": "node esbuild-server.js",
    "compile": "npm run esbuild-base && npm run esbuild-server",
    "watch": "npm run esbuild-base -- --watch",
    "package": "vsce package",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.27.2",
    "eslint": "^8.x",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "ajv": "^8.17.1"
  }
}
